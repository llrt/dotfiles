# zsh's replacement
alias r=/usr/local/bin/r

# Programming aliases
alias py="python"
alias rb="ruby"

# Todo.txt aliases
alias t='todo.sh'
alias ta='todo.sh add'
alias tl='todo.sh ls'

# Make ls colorful
alias ls='gls -a --color'
alias ll='ls -l'

# Command to clear out ASL logs to keep Terminal startup time super-speedy - via davejacobs
alias cleanterm="sudo rm -f /private/var/log/asl/*.asl"
